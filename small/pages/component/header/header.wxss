.header {
  display: flex;
  height: 80rpx;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  background-color: #222;
  box-sizing: border-box;
  padding-right: 20rpx;
  text-align: center;
  color: #ffcd32;
}
.header text {
  width: 100%;
  font-size: 14px;
  text-align: center;
}
.header-item {
  flex: 1 1 auto;
  text-align: center;
  color: #666;
  font-size: 14px;
}
.header-item-active {
  color: #ffcd32;
  position: relative;
}
.header-item-active:after {
  content: '';
  position: absolute;
  bottom: -4px;
  width: 60rpx;
  left: 50%;
  background-color: #ffcd32;
  margin-left: -30rpx;
  height: 2px;
}
.header image {
  height: 50rpx;
  width: 50rpx;
}
.header .img {
  width: 100%;
  height: 100%;
}
.title {
  padding-left: 40rpx;
}