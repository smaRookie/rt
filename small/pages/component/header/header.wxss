.header {
  display: flex;
}
.header-item {
  flex: 1 1 auto;
  text-align: center;
  color: #666;
  font-size: 14px;
}
.header-item-active {
  color: #ffcd32;
  position: relative;
}
.header-item-active:after {
  content: '';
  position: absolute;
  bottom: -4px;
  width: 60rpx;
  left: 50%;
  background-color: #ffcd32;
  margin-left: -30rpx;
  height: 2px;
}