/* pages/home/home.wxss */
@import './../component/header/header.wxss';
.main {
  width: 100%;
  min-height: 100vh;
  background-color: #222;
}
.main .scrollWrap {
  height: calc(100vh - 160rpx);
  /* overflow: hidden; */
}
.main .img {
  width: 100%;
  height: 100%;
}
.main .hot {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #ffcd32;
  text-align: center;
}
.main .listWrap .list-item {
  display: flex;
  box-sizing: border-box;
  padding: 10px 20rpx;
}
.main .listWrap .list-item image {
  width: 60px;
  height: 60px;
  flex: 0 0 60px;
}
.main .listWrap .list-item .list-item-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  box-sizing: border-box;
  padding: 0px 20rpx;
  font-size: 30rpx;
}
.main .listWrap .list-item .list-item-desc .desc {
  color: #fff;
  font-size: 32rpx;
}
.main .listWrap .list-item .list-item-desc .author {
  color: hsla(0,0%,100%,.3);
  font-size: 26rpx;
}